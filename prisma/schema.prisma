generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Medewerker {
  id              Int          @id @default(autoincrement())
  naam            String
  voornaam        String
  email           String       @unique
  wachtwoord_hash String
  rollen          Json
  bestellingen    Bestelling[]
  dienst          Dienst       @relation(fields: [dienstId], references: [id])
  dienstId        Int
}

model Bestelling {
  bestellingsnr Int        @id @default(autoincrement())
  besteldatum   DateTime
  medewerker    Medewerker @relation(fields: [medewerkerId], references: [id])
  medewerkerId  Int
  maaltijden    Maaltijd[]
}

model SuggestieVanDeMaand {
  id           Int        @id @default(autoincrement())
  maand        Int
  vegie        Boolean
  omschrijving String
  maaltijden   Maaltijd[]

  @@unique([maand, vegie])
}

model Maaltijd {
  id                    Int                  @id @default(autoincrement())
  type                  String
  leverdatum            DateTime
  hoofdschotel          String?
  soep                  Boolean
  dessert               String
  typeSandwiches        String?
  hartigBeleg           String?
  zoetBeleg             String?
  vetstof               Boolean?
  leverplaats           Dienst               @relation(fields: [leverplaatsId], references: [id])
  leverplaatsId         Int
  bestelling            Bestelling?          @relation(fields: [bestellingsnr], references: [bestellingsnr], onDelete: Cascade)
  bestellingsnr         Int?
  suggestieVanDeMaand   SuggestieVanDeMaand? @relation(fields: [suggestieVanDeMaandId], references: [id])
  suggestieVanDeMaandId Int?
}

model Dienst {
  id          Int          @id @default(autoincrement())
  naam        String       @unique
  medewerkers Medewerker[]
  maaltijden  Maaltijd[]
}
